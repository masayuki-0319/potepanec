      <div class="col-xs-12">
        <div class="media">
          <div class="media-left productSlider">
            <div id="carousel" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% 0.upto(3) do |n| %>
                  <div class="item <%= 'active' if n.zero? %>" data-thumb="<%= n %>">
                    <%= image_tag("img/products/signle-product/product-slide-big-0#{n+1}.jpg") %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="clearfix">
